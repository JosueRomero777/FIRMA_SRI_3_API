# Archivo de ejemplo para configurar en producción
# Copiar este archivo como .env.production y ajustar SYSTEM_USER

APP_ENV=prod
APP_DEBUG=0
APP_URL=https://tu-dominio.com

# Usuario del sistema (CAMBIAR según el entorno)
# En tu PC local: axcalle
# En tu VPS: ubuntu, root, deploy, etc.
SYSTEM_USER=ubuntu

# Directorios base
SRI_DATA_BASE_DIR=/home/${SYSTEM_USER}/sri-facturacion

# Directorios específicos para Docker (rutas dentro del contenedor)
UPLOAD_DIR=/var/www/html/var/tmp
AUTORIZADOS_DIR=/var/www/facturacion/autorizados

# Rutas de facturación para acceso desde el host (usando variable de usuario)
RUTA_FIRMA=${SRI_DATA_BASE_DIR}/firmados/
RUTA_XML_SIN_FIRMA=${SRI_DATA_BASE_DIR}/sin_firma/
RUTA_XML_FIRMADOS=${SRI_DATA_BASE_DIR}/firmados/
RUTA_XML_AUTORIZADOS=${SRI_DATA_BASE_DIR}/autorizados/
RUTA_TEMPORALES=${SRI_DATA_BASE_DIR}/temporales/
RUTA_LOGS=${SRI_DATA_BASE_DIR}/logs/

# Tu API key de Gemini
export GEMINI_API_KEY="tu_api_key_aqui"
